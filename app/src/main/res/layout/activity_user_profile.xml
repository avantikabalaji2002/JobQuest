<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/bg"
    tools:context=".UserProfileActivity">

    <TextView
        android:id="@+id/myProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="10dp"
        android:background="#cccfce"
        android:gravity="center"
        android:padding="8dp"
        android:text="MY PROFILE"
        android:textColor="#000000"
        android:textSize="25sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/profileName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:paddingBottom="8dp"
        android:paddingTop="50dp"
        android:text="Name: Avantika" />

    <TextView
        android:id="@+id/profileDOB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"

        android:paddingBottom="8dp"
        android:text="DOB: 18-01-2002" />

    <TextView
        android:id="@+id/profileSemester"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:paddingBottom="8dp"
        android:text="Semester: 7" />

    <TextView
        android:id="@+id/profileCGPA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:paddingBottom="8dp"
        android:text="CGPA: 8" />

    <TextView
        android:id="@+id/profilePassOutYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:paddingBottom="8dp"
        android:text="Batch: 2024" />

    <TextView
        android:id="@+id/profileAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:paddingBottom="8dp"
        android:text="Place: Coimbatore" />

    <TextView
        android:id="@+id/profileInterest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:paddingBottom="8dp"
        android:text="Interested for placement: Yes" />

    <TextView
        android:id="@+id/profileType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:paddingBottom="8dp"
        android:text="Type: Internship" />

    <TextView
        android:id="@+id/profileUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:paddingBottom="8dp"
        android:text="Username: avantikabalaji" />

    <TextView
        android:id="@+id/profileEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:paddingBottom="8dp"
        android:text="Email: avantikabalaji2002@gmail.com" />

    <Button
        android:id="@+id/backToEmployeeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back to Main Page" />

</LinearLayout>
